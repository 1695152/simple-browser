<Window x:Class="SimpleBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBrowser"
        mc:Ignorable="d"
        Title="Simple Browser" Height="768" Width="1024" ResizeMode="NoResize"  FontFamily="Courier New" FontSize="14" Loaded="Fenetre_chargee">
    <Grid x:Name="grid_principal">
        <Grid x:Name="grid_browsing">
            <TextBox x:Name="textbox_url" HorizontalAlignment="Left" Height="23" Margin="129,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="787" KeyDown="textbox_url_KeyDown" />
            <Label x:Name="label" Content="Web link:" HorizontalAlignment="Left" Margin="22,10,0,0" VerticalAlignment="Top" Width="107"/>
            <WebBrowser x:Name="webBrowser" HorizontalAlignment="Left" Height="688" Margin="0,41,0,0" VerticalAlignment="Top" Width="1008"/>
            <Button x:Name="btn_aller" Content="Aller" HorizontalAlignment="Left" Margin="933,13,0,0" VerticalAlignment="Top" Width="75" Click="btn_aller_Click"/>

        </Grid>
    </Grid>
</Window>
